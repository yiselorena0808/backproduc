{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "node16",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
      "moduleResolution": "node16"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
